<div class="row">
  <div class="col-sm-6">
    <h1>
      New User
    </h1>
    <p><%= link_to "Back to Users", admin_users_path %></p>

    <%= form_for [:admin, @user], :html => { :role => "form" } do |f| %>
    
    <div class="form-group">
      <%= f.label :username %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :username, :autofocus => true, class: "form-control" %>  
        </div>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :email %>
      <div class="row">
        <div class="col-sm-6">      
          <%= f.email_field :email, class: "form-control" %>  
        </div>
      </div>
    </div>
	
    <div class="form-group">
      <%= f.label :store %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :store, :autofocus => true, class: "form-control" %>  
        </div>
      </div>
    </div>
	
    <div class="form-group">
      <%= f.label :address %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :address, :autofocus => true, class: "form-control" %>  
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :storegroup %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.select :storegroup_id, options_from_collection_for_select(Storegroup.all, 'id', 'name') %>  
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      </div>
    </div>
    
    <% unless current_user.id == @user.id %>
    <div class="checkbox">
      <%= f.check_box :locked %> <%= f.label :locked, "Is Locked?" %>
    </div>
    
    <div class="checkbox">
      <%= f.check_box :admin %> <%= f.label :admin, "Is Admin?" %>
    </div>
	
    <div class="checkbox">
      <%= f.check_box :fulfillment %> <%= f.label :fulfillment, "Is Fulfillment staff?" %>
    </div> 
    <% end %>

    <div class="row">
      <div class="col-sm-6">
        <%= f.submit "Update User", class: "btn btn-danger" %>
      </div>
    </div>    
    
    <% end %>

  </div>
</div>