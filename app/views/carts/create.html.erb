<h1>Please verify your order</h1>
You are about to order the following items:

<table class="table table-striped">
	<tr>
		<th> Quantity </th>
		<th> Name </th>
		<th> Description </th>
		<th> Price </th>
		<th> Total price </th>
	</tr>
<% @cart.line_items.each do |line_item| %>
	<tr>
		<td><%= line_item.quantity%></td>
		<td><%= line_item.product.name %></td>
		<td><%= line_item.product.desc %></td>
		<td><%= humanized_money_with_symbol line_item.product.price %></td>
		<td><%= humanized_money_with_symbol line_item.total_price %></td>
	</tr>
<% end %>
	<tr>
		<td span=5><em>Totals</em></td>
	</tr>
	<tr>
		<td><%= @cart.number_of_items %></td>
		<td></td>
		<td></td>
		<td></td>
		<td><%= @cart.total_value%></td>
	</tr>
</table>